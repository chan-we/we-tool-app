{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "we-tool",
    "version": "0.0.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": true,
        "save": false
      },
      "window": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "we-tool",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; media-src 'self' data: blob: *;"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "we-tool",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/chan-we/we-tool-app/releases/download/app-v{{current_version}}/we-tool_{{current_version}}_{{arch}}-setup.exe"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZDMEFGOEU4M0Q2NUFDREIKUldUYnJHVTk2UGdLYk10eTdIb3RodEJ3eE9NS3NzcHdia0ZWRHloQk5DY0RhVXk3ZjN1d094NEUK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
